#!/usr/bin/env bash
set -e

port=3999

./node_modules/.bin/coffee ./test/server.coffee $port &>/dev/null &
pid=$!
trap "kill $pid" INT EXIT

phantom="$(which phantomjs)"

[ -z "$CI" ] || echo "PhantomJS $($phantom -v)"

exec mocha-phantomjs -p "$phantom" \
  "http://localhost:${port}/test/index.html"
